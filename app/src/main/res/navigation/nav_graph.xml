<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/mainFragment">

    <fragment
        android:id="@+id/mainFragment"
        android:name="com.herald.mazaadyapp.presentation.fragments.MainFragment"
        android:label="@string/app_name"
        tools:layout="@layout/main_fragment">
        <action
            android:id="@+id/action_mainFragment_to_resultsFragment"
            app:destination="@id/resultsFragment"
            app:launchSingleTop="false"
            app:popUpTo="@id/mainFragment"
            app:popUpToInclusive="false" />
        <action
            android:id="@+id/action_mainFragment_to_secondaryFragment"
            app:destination="@id/secondaryFragment"
            app:launchSingleTop="false"
            app:popUpTo="@id/mainFragment"
            app:popUpToInclusive="false" />
    </fragment>
    <fragment
        android:id="@+id/resultsFragment"
        android:name="com.herald.mazaadyapp.presentation.fragments.ResultsFragment"
        android:label="Results Fragment"
        tools:layout="@layout/results_fragment"/>
    <fragment
        android:id="@+id/secondaryFragment"
        android:name="com.herald.mazaadyapp.presentation.fragments.SecondaryFragment"
        android:label="Secondary Fragment"
        tools:layout="@layout/secondry_fragment"/>
</navigation>