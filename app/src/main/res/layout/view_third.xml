<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:gravity="center"
        android:orientation="horizontal"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="عرض الكل"
            android:textSize="20sp"
            android:textStyle="bold"
            android:drawableLeft="@drawable/baseline_keyboard_arrow_left_24"
            android:textColor="@color/primary"
            />
        <TextView
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="المزايدون"
            android:textSize="20sp"
            android:textStyle="bold"
            android:drawablePadding="3dp"
            app:drawableRightCompat="@drawable/ico_aud" />

    </LinearLayout>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:gravity="center_vertical"
        >

        <ImageView
            android:id="@+id/userIcon1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:layout_marginBottom="10dp"
            android:layout_marginEnd="10dp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:src="@drawable/nopath" />

        <TextView
            android:id="@+id/userName1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="اسم المزايد"
            android:textColor="@color/date_text"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_alignTop="@+id/userIcon1"
            android:layout_toLeftOf="@+id/userIcon1"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="13:59:00"
            android:textColor="@color/sec_text"
            android:textSize="14sp"
            android:textStyle="bold"
            android:layout_toLeftOf="@+id/userIcon1"
            android:layout_below="@+id/userName1"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="+20"
            android:textColor="@color/count_text"
            android:textSize="24sp"
            android:textStyle="bold"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            />

    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:gravity="center_vertical"
        >

        <ImageView
            android:id="@+id/userIcon2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:layout_marginBottom="10dp"
            android:layout_marginEnd="10dp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:src="@drawable/nopath" />

        <TextView
            android:id="@+id/userName2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="اسم المزايد"
            android:textColor="@color/date_text"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_alignTop="@+id/userIcon2"
            android:layout_toLeftOf="@+id/userIcon2"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="13:59:00"
            android:textColor="@color/sec_text"
            android:textSize="14sp"
            android:textStyle="bold"
            android:layout_toLeftOf="@+id/userIcon2"
            android:layout_below="@+id/userName2"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="+20"
            android:textColor="@color/count_text"
            android:textSize="24sp"
            android:textStyle="bold"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            />

    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:gravity="center_vertical"
        >

        <ImageView
            android:id="@+id/userIcon3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:layout_marginBottom="10dp"
            android:layout_marginEnd="10dp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:src="@drawable/nopath" />

        <TextView
            android:id="@+id/userName3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="اسم المزايد"
            android:textColor="@color/date_text"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_alignTop="@+id/userIcon3"
            android:layout_toLeftOf="@+id/userIcon3"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="13:59:00"
            android:textColor="@color/sec_text"
            android:textSize="14sp"
            android:textStyle="bold"
            android:layout_toLeftOf="@+id/userIcon3"
            android:layout_below="@+id/userName3"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="+20"
            android:textColor="@color/count_text"
            android:textSize="24sp"
            android:textStyle="bold"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            />

    </RelativeLayout>

</LinearLayout>