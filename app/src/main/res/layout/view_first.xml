<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <include
        android:id="@+id/inclusionImgData"
        layout="@layout/image_data"
        />
    <com.google.android.material.card.MaterialCardView
        app:cardBackgroundColor="@color/white"
        android:id="@+id/linearLayout2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        app:cardCornerRadius="5dp"
        android:padding="20dp"
        app:cardElevation="10dp"
        app:layout_constraintBottom_toBottomOf="@id/inclusionImgData"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/inclusionImgData"
        android:orientation="horizontal">

        <LinearLayout
            android:gravity="center"
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp">
            <LinearLayout
                android:gravity="center"
                android:orientation="vertical"
                android:layout_marginHorizontal="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="بتاريخ"
                    android:textColor="@color/sec_text"
                    android:textSize="12sp"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="26-11-2021"
                    android:textStyle="bold"
                    android:textColor="@color/date_text"
                    android:textSize="16sp"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="13:59:00"
                    android:textColor="@color/date_text"
                    android:textSize="12sp"
                    />
            </LinearLayout>

            <LinearLayout
                android:gravity="center"
                android:layout_marginHorizontal="10dp"
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="المزاد يبدأ بعد"
                    android:textColor="@color/sec_text"
                    android:textSize="12sp"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="31:22:55"
                    android:textStyle="bold"
                    android:textColor="@color/count_text"
                    android:textSize="16sp"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="دقيقة/ساعة/يوم"
                    android:textColor="@color/count_text"
                    android:textSize="12sp"
                    />
            </LinearLayout>
        </LinearLayout>

    </com.google.android.material.card.MaterialCardView>
</androidx.constraintlayout.widget.ConstraintLayout>
